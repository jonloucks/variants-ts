{
  "name": "@jonloucks/variants-ts",
  "version": "1.1.0",
  "description": "Node.js Typescript Configuration Library, normalize how configuration is loaded from various sources is retrieved.",
  "private": true,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./version": {
      "types": "./version.d.ts",
      "import": "./version.js",
      "default": "./version.js"
    },
    "./api/*": {
      "types": "./api/*.d.ts",
      "import": "./api/*.js",
      "default": "./api/*.js"
    },
    "./auxiliary/*": {
      "types": "./auxiliary/*.d.ts",
      "import": "./auxiliary/*.js",
      "default": "./auxiliary/*.js"
    }
  },
  "files": [
    "*",
    "!never-publish/**/*",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsx --test $(find src -name '*.test.ts')",
    "test:watch": "tsx --test --watch $(find src -name '*.test.ts')",
    "test:coverage": "mkdir -p coverage && tsx --test --experimental-test-coverage --experimental-specifier-resolution=node --test-reporter=lcov $(find src -name '*.test.ts') > coverage/lcov.info",
    "test:coverage-report": "npx badges-ts coverage-report",
    "test:coverage-gate": "npx badges-ts coverage-gate",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "before:publish": "npm run clean && npm run compile && cp package.json dist && cp README.md dist && cd dist && npm pkg delete private",
    "after:publish": "npm run clean",
    "prepare": "npm run build",
    "docs": "typedoc --options typedoc.json",
    "badges": "npx badges-ts generate",
    "discover": "npx badges-ts discover",
    "clean": "rm -rf dist && rm -rf coverage && npm install",
    "compile": "tsc",
    "postversion": "npm run applyversion",
    "applyversion": "npx badges-ts apply-version",
    "pack-package": "npm run before:publish && mkdir -p packs && cd dist && npm pack && mv *.tgz ../packs/ && npm run after:publish"
  },
  "keywords": [
    "typescript",
    "badge",
    "workflow",
    "status"
  ],
  "author": "Jon Loucks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonloucks/variants-ts.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "overrides": {
    "minimatch": "10.2.1"
  },
  "devDependencies": {
    "@jonloucks/badges-ts": "^1.4.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "tsx": "^4.16.2",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@jonloucks/contracts-ts": "^2.0.3"
  }
}
